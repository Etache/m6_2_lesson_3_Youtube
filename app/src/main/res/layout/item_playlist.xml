<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_playlist_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_playlist_prev"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/playlist_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:background="@drawable/preview_bottom_panel_bg"
            android:text="playlist"
            android:textColor="@color/white"
            android:gravity="end"
            android:paddingEnd="26dp"
            app:layout_constraintBottom_toBottomOf="@id/cl_playlist_prev"
            app:layout_constraintStart_toStartOf="@id/cl_playlist_prev"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/cl_text"
        android:layout_marginStart="8dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emotional Well-being 'n' Healing Practices for Children"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/fjalla_one"
            app:layout_constraintTop_toTopOf="@id/cl_text"
            app:layout_constraintStart_toStartOf="@id/cl_text"/>
        <TextView
            android:id="@+id/tv_video_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32 video series"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/cl_text"
            app:layout_constraintStart_toStartOf="@id/cl_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>